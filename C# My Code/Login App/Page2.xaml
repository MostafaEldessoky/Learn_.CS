<UserControl x:Class="Login_App.Page2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Login_App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF715858">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.ColumnSpan="2" Grid.Column="1" Content="YOUR LOGIN INFO" Grid.Row="0" Foreground="Black" Background="#FF5E68A4" FontWeight="Bold" FontSize="36" FontFamily="Agency FB" Margin="10,10,10,10" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Label Grid.Column="1" Content="USER NAME" Grid.Row="1" Foreground="Black" Background="#FFC2EF04" FontWeight="Bold" FontSize="36" FontFamily="Agency FB" Margin="10,10,10,10" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Label Grid.Column="1" Content="PASSWORD" Grid.Row="2" Foreground="Black" Background="#FF9500ED" FontWeight="Bold" FontSize="36" FontFamily="Agency FB" Margin="10,10,10,10" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <TextBlock x:Name="showusername" Grid.Column="2" Grid.Row="1" Background="Black" FontFamily="Agency FB" FontSize="22" FontWeight="Bold" Foreground="White" TextAlignment="Center" VerticalAlignment="Center" Height="40"/>

        <TextBlock x:Name="showpassword" Grid.Column="2" Grid.Row="2" Background="Black" FontFamily="Agency FB" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" TextAlignment="Center" Height="40"/>

    </Grid>
</UserControl>
